{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "worker": true,
    "mocha": true,
    "mongo": true,
    "es6": true
  },
  "plugins": ["arrow-function"],
  "rules": {
    "arrow-function/no-condition" : 2,
    "strict": 0,
    "no-var": 2,
    "object-shorthand": 2,
    "prefer-const": 2,
    "quotes":  [2, "single", "avoid-escape"],
    "camelcase": 2,
    "comma-dangle": [2, "never"],
    "complexity": [0, 5],
    "consistent-this": [2, "self"],
    "dot-notation": 0,
    "eqeqeq": 2,
    "indent": [2, 4],
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true
    }],
    "new-cap": 0,
    "no-bitwise": 2,
    "no-caller": 2,
    "no-empty": 2,
    "no-extend-native": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new": 2,
    "no-new-wrappers": 2,
    "no-redeclare": 2,
    "no-trailing-spaces": 2,
    "no-unused-vars": [2, {"vars": "all", "args": "after-used"}],
    "no-undef": 2,
    "no-underscore-dangle": 0,
    "no-use-before-define": [2, "nofunc"]
  }
}
